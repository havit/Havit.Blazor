@namespace Havit.Blazor.Components.Web.Bootstrap

<div class="@GetClasses()"
	 aria-current="@Active"
	 aria-disabled="@(!Enabled)"
	 role="@(OnClick.HasDelegate ? "button" : null)"
	 @onclick="@(OnClick.HasDelegate ? EventCallback.Factory.Create<MouseEventArgs>(this, InvokeOnClickAsync) : (EventCallback<MouseEventArgs>)default)"
	 @onclick:stopPropagation="OnClick.HasDelegate">
	@ChildContent
</div>