@namespace Havit.Blazor.Components.Web.Bootstrap

<div>
    <HxNavLink Href="@Href" 
               CssClass="@CssClassHelper.Combine(CssClass)" 
               Match="Match">
        <div class="hx-sidebar-footer-item-navlink-content">
            @if (Icon != null)
            {
                <HxIcon Icon="Icon" />
            }
            <span class="@CssClassHelper.Combine("hx-sidebar-footer-item-navlink-content-inner", TextCssClass)">
                @Text
            </span>
        </div>
    </HxNavLink>
</div>