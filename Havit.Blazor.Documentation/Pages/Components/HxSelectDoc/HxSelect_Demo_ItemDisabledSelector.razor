@inject IDemoDataService DemoDataService

<HxSelect TItem="EmployeeDto"
		  TValue="int?"
		  Label="Employee (some disabled)"
		  Data="data"
		  @bind-Value="employeeId"
		  TextSelector="@(employee => employee.Name)"
		  ValueSelector="@(employee => employee.Id)"
		  ItemDisabledSelector="@(employee => IsEmployeeDisabled(employee))"
		  Nullable="true"
		  NullText="-select employee-"
		  NullDataText="Loading employees..." />

<p class="mt-2">Selected employee ID: @employeeId</p>

<HxAlert Color="ThemeColor.Info" class="mt-3">
	<strong>ItemDisabledSelector Demo:</strong> Every 3rd employee (ID divisible by 3) is disabled and cannot be selected.
</HxAlert>

@code {
	private IEnumerable<EmployeeDto> data;
	private int? employeeId;

	protected override async Task OnInitializedAsync()
	{
		data = await DemoDataService.GetAllEmployeesAsync();
	}

	private bool IsEmployeeDisabled(EmployeeDto employee)
	{
		// Disable employees with IDs divisible by 3 for demonstration
		return employee.Id % 3 == 0;
	}
}