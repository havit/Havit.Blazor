@attribute [Route("/components/" + nameof(HxContextMenu))]

<ApiDoc Type="typeof(HxContextMenu)">
    <MainContent>
        <DocHeading Title="Basic usage" />
        <Demo Type="typeof(HxContextMenu_Demo)" Tabs="false" />

        <DocHeading Title="Items with icons" Id="icons" />
        <p>You can set <code>Icon</code> parameter for some of the menu items.</p>
        <Demo Type="typeof(HxContextMenu_Demo_WithIcons)" />
    </MainContent>
    <CssVariables>
        <ApiDocCssVariable Name="--hx-context-menu-button-color" Default="unset">
            Color of the button content.
        </ApiDocCssVariable>
        <ApiDocCssVariable Name="--hx-context-menu-button-border-radius" Default="var(--bs-border-radius-sm)">
            Border radius.
        </ApiDocCssVariable>
        <ApiDocCssVariable Name="--hx-context-menu-button-border" Default="unset">
            Border.
        </ApiDocCssVariable>
        <ApiDocCssVariable Name="--hx-context-menu-button-hover-background" Default="rgba(var(--bs-emphasis-color-rgb), .1)">
            Background of the context menu button on hover.
        </ApiDocCssVariable>
        <ApiDocCssVariable Name="--hx-context-menu-button-padding" Default="0 .25rem">
            Padding of the context menu button.
        </ApiDocCssVariable>
        <ApiDocCssVariable Name="--hx-context-menu-button-font-size" Default="inherit">
            Font size of the context menu button icon.
        </ApiDocCssVariable>
        <ApiDocCssVariable Name="--hx-context-menu-item-icon-margin" Default="0 .5rem 0 0">
            Margin of the item icon.
        </ApiDocCssVariable>
    </CssVariables>
</ApiDoc>

