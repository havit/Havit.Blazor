@page "/"
@namespace BlazorAppTest.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
	Layout = null;
}

<!doctype html>
<html lang="en">
<head>
	<!-- Required meta tags -->
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1">

	<!-- Bootstrap CSS -->
	@Html.Raw(HxSetup.RenderBootstrapCssReference())
	<link href="_content/Havit.Blazor.Components.Web.Bootstrap/defaults.css" rel="stylesheet" />
	<link href="BlazorAppTest.styles.css" rel="stylesheet" /> @* CSS Isolation *@

	<title>BlazorAppTest</title>

	<base href="~/" />
	<link href="css/site.css" rel="stylesheet" />
</head>
<body>
	<div class="container">
		<app>
			<component type="typeof(App)" render-mode="ServerPrerendered" />
		</app>

		<div id="blazor-error-ui">
			An unhandled error has occurred.
			<a href="" class="reload">Reload</a>
			<a class="dismiss">🗙</a>
		</div>
	</div>

	<script src="_framework/blazor.server.js"></script>
@Html.Raw(HxSetup.RenderBootstrapJavaScriptReference())
</body>
</html>
