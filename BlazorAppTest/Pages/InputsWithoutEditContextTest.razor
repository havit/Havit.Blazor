@page "/InputsWithoutEditContextTest"
@using System.Globalization;
@using Havit
 
<h1>Inputs without EditContext</h1>

<HxInputText Label="Text" @bind-Value="@text" />

<HxInputNumber Label="Integer (nullable)" @bind-Value="@nullableIntegerValue" ParsingErrorMessage="Enter correct Integer." />

<HxInputNumber Label="Decimal" @bind-Value="@decimalValue" ParsingErrorMessage="Enter correct Decimal." />
<HxInputDate Label="Date" @bind-Value="@dateValue" ParsingErrorMessage="Enter correct Date." />
<HxInputDateRange Label="DateRange" @bind-Value="@dateRangeValue" FromParsingErrorMessage="Enter correct date from." ToParsingErrorMessage="Enter correct date to." />

<HxCheckbox Text="Checkbox" @bind-Value="@boolValue" />
<HxCheckbox Text="Checkbox" CssClass="form-switch" @bind-Value="@boolValue" />

<HxSubmit Icon="@BootstrapIcon.Check" Color="ThemeColor.Primary">Submit</HxSubmit>

@code
{
	private string text;
	private int? nullableIntegerValue;
	private decimal decimalValue;
	private DateTime dateValue;
	private DateTimeRange dateRangeValue;
	private bool boolValue;
}
