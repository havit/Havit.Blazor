@page "/HxInputDateRange_EditForm"
@rendermode @(new InteractiveServerRenderMode(prerender: false))

<EditForm Model="model">
	<HxInputDateRange @bind-Value="model.Range"
					  Label="TestLabel"
					  DateOrderErrorMessage="TestDateOrderErrorMessage" />
</EditForm>

<div class="pt-4">
	<p data-testid="value-from">@model.Range.StartDate?.ToShortDateString()</p>
	<p data-testid="value-to">@model.Range.EndDate?.ToShortDateString()</p>
</div>

@code {
	private FormModel model { get; set; } = new FormModel();
	public record class FormModel
	{
		public DateTimeRange Range { get; set; }
	}
}
